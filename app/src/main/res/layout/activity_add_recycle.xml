<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        tools:ignore="ExtraText">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_create_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/appbar_widget_create_re"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                app:title="Post Recyle" />

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_waste"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar_create_re"
            android:text="Trash"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/add_img_before"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#cccc"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar_create_re"
            android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/add_title_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/add_img_before"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:hint="Title" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_title_before"
            android:layout_marginTop="12dp"
            android:text="SAVE"
            android:backgroundTint="@color/green"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:id="@+id/tv_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_send"
            android:text="Recycle"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/add_img_after"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#cccc"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rec"
            android:layout_marginTop="20dp" />


        <EditText
            android:id="@+id/add_title_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/add_img_after"
            android:layout_marginTop="12dp"
            android:hint="Title" />

        <Button
            android:id="@+id/btn_send2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_title_after"
            android:layout_marginTop="12dp"
            android:text="SAVE"
            android:backgroundTint="@color/green"
            tools:layout_editor_absoluteY="4dp" />

        <Button
            android:id="@+id/add_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="POST RECYCLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_send2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
