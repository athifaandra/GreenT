<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_menu"
        >

        <ImageView
            android:id="@+id/ivlogo_menu2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            tools:src="@drawable/icons8_pickup_100"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tvtxt_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Up"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/desc_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We Will Pick Up Your Trash"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/panah"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/icons8_arrow_100"
            android:layout_gravity="center_vertical"
            />


    </LinearLayout>

</LinearLayout>