<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"/>

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/title_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_toRightOf="@id/image_news"
        android:text="Title News"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/detail_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_news"
        android:layout_marginLeft="140dp"
        android:layout_toRightOf="@id/image_news"
        android:layout_marginTop="60dp"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="Detail News" />

    <TextView
        android:id="@+id/text_author_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="email@pembuat.berita"
        android:visibility="visible" />

</androidx.cardview.widget.CardView>







